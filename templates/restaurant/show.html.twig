{% extends 'base.html.twig' %}

{% block body %}
    <section class="restaurants">
        <restaurant>
            <h2> {{ restaurant.nom }} </h2>
            <div class"content">
            {{ restaurant.position }}
            {{ restaurant.dateEntrer | date('d/m/Y')}}
                Ayant pour proprietaire : {{ restaurant.gerantRestaurant }}
            </div>
            <div class"content">
                    <img src="{{ asset('/images/2.jpg') }}" alt="2">
            </div>
            <div class"content">
            {% for comment in restaurant.Commenter %}
            {}
            </div>
            <div class"content">
                <a href="{{ path('addLike', {'id': restaurant.id}) }}" class="btn btn-primary">J'aime : {{ restaurant.likeRestaurant}}</a>
                <a href="{{ path('adddisLike', {'id': restaurant.id}) }}" class="btn btn-primary">Je n'aime pas : {{ restaurant.dislikeRestaurant}}</a>
            </div>
            <br />
            <div class"content">
                <a href="{{ path('promotion', {'id': restaurant.id}) }}" class="btn btn-primary">Commenter</a>
                <a href="{{ path('promotion', {'id': restaurant.id}) }}" class="btn btn-primary">Signaler</a>
            </div>
        </restaurant>
    </section>
{% endblock %}